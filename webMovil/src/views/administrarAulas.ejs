<%- include('partials/header'); %>

<section class="page-text">
    <ul class="flex-row flex-space no-deco ">
        <li><a href="/administrativo/agregarAulas" class="page-button no-deco margin-b">&#43 Agregar Aulas</a></li>
        <!-- <li><a href="/administrativo/buscarAulas" class="page-button no-deco ">Buscar Aulas</a></li> -->
    </ul>
</section>

<table class="page-text" id="data-table">
    <tr>
        <th class="ex-col">id</th>
        <th>Nombre</th>
        <th>cap.</th>
        <th class="ex-col">ubicacion</th>
        <th class="ex-col">estado</th>
        <th >tipo</th>
        <th>activo</th>
        <!-- <th class="ex-col">descripcion</th> -->
        <th>editar</th>
    </tr>
    <tr class="row-data">
        <% rows.forEach(function (amb) {%>
            <td class="ex-col"> <%= amb.id_ambiente %> </td>
            <td> <%= amb.nombre %> </td>
            <td> <%= amb.capacidad %> </td>
            <td class="ex-col"> <%= amb.ubicacion %> </td>
            <td class="ex-col"> <%= amb.id_estado %> </td>
            <td> <%= amb.id_tipo %> </td>
            <td> <%= amb.activo %> </td>
            <td> <div id="edit-button" class="icons" style="--posX:-4"></div> </td>
        <% } ) %>
    </tr>
</table>


<%- include('partials/footer'); %>