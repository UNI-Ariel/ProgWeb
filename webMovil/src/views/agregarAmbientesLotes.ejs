<%- include('partials/header'); %>

<section class="flex-column align-center page-text">
    <div class="box-fx">
        <h3 class="center-text margin-b">Agregar Ambiente por Lotes</h3>
        <form action="/subirCSV" method="POST" class="flex-column form-width" id="form-csv">
            <div class="margin-b center-text">
                <h4 class="margin-b">Archivo CSV:</h4>
                <p class="margin-b">Filas validas para un .csv</p>
                <p>
                    El archivo csv tiene que ser subido en el siguiente orden:
                    Nombre del ambiente, Tipo de ambiente, Facilidades
                </p>
                <input type="file" name="csv" id="archivocsv" accept=".csv">
            </div>
            <input class="page-button" type="submit" value="Subir"> 
        </form>
    </div>
</section>

<%- include('partials/footer'); %>