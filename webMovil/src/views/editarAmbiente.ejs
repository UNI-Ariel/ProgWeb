<%- include('partials/header'); %>

<% if (locals.ambiente) { %>

    <div class="innerFlex page-text box-fx">
        <form class="flex-column" id="update-form">
            <h4 class="center-text margin-b">Editando el Ambiente con ID: <%= ambiente.id_ambiente %></h4>
            <div class="innerFlex flex-space">
                <div >
                    <div class="margin-b">
                        <p >Nombre del Aula:</p>
                        <input type="text" name="id_ambiente" class="input-field" value="<%= ambiente.id_ambiente %>" readonly>
                    </div>
    
                    <div class="margin-b">
                        <p >Nombre del Aula:</p>
                        <input type="text" name="nombre" class="input-field" value="<%= ambiente.nombre %>" required>
                    </div>
    
                    <div class="margin-b">
                        <p >Tipo:</p>
                        <select name="id_tipo" class="input-field" required>                        
                            <option  value="" selected disabled hidden>Seleccion</option>
                            <% tipos.forEach(function (t) { %>
                                <option  value="<%= t.id_tipo %>"><%= t.id_tipo %></option>
                            <% } ) %>
                        </select>
                    </div>
    
                    <div class="margin-b">
                        <p >Ubicaci√≥n:</p>
                        <input type="text" name="ubicacion" class="input-field" value="<%= ambiente.ubicacion %>" required>
                    </div>
                </div>

                <div>
                    <div class="margin-b">
                        <p >Capacidad:</p>
                        <input type="number" name="capacidad" min="1" max="5000" class="input-field" value="<%= ambiente.capacidad %>" required>
                    </div>
        
                    <div class=" margin-b">
                        <p >Activo:</p>
                        <label>
                            <input type="radio" name="activo" value="si" checked required>
                            Si
                        </label>
                        <label class="dblock">
                            <input type="radio" name="activo" value="no" required>
                            No
                        </label>
                    </div>
        
                    <div class=" margin-b">
                        <p >Deshabilitado:</p>
                        <label>
                            <input type="radio" name="deshabilitado" value="si" required>
                            Si
                        </label>
                        <label class="dblock">
                            <input type="radio" name="deshabilitado" value="no" checked required>
                            No
                        </label>
                    </div>
        
                    
                </div>
                <div class="margin-b">
                    <p >Descripcion:</p>
                    <textarea rows="8" name="descripcion" class="input-field" value="<%= ambiente.ubicacion %>"> </textarea>
                </div>
            </div>
            <input class="page-button" type="submit" value="Actualizar">  
        </form>
    </div>

